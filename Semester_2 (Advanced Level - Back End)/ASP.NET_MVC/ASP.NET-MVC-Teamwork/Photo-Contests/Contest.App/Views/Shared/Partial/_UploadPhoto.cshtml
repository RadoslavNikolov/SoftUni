@using Microsoft.AspNet.Identity
@model Contests.App.Models.BindingModels.PhotoBindingModel

<div class="result"></div>

@using (Html.BeginForm("Upload", "Photo", new { UserId = User.Identity.GetUserId() , id = Model.ContetsId }, FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="media-top">
                <a href="#">
                    <img src="#" id="imgprw" class="media-object, cover" width="250" alt="upload picture">
                </a>
            </div>
            @Html.Label("Photo", new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                <input type="file" id="photo" name="upload" onchange="imagepreview(this)" />
                @Html.ValidationMessageFor(model => model.Upload, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default"/>
            </div>
        </div>

    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


