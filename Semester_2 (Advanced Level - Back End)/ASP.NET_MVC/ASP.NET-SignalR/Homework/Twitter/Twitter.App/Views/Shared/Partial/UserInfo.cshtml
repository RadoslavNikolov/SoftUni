@model Twitter.App.Models.ViewModels.UserFullViewModel


    <h2>User</h2>
    <hr />
    <dl class="dl-horizontal">
        @if (Model.Files.Any(f => f.FileType == FileType.Photo))
        {
            <dd>
                <img src="~/File?id=@Model.Files.First(f => f.FileType == FileType.Photo).FileId" class="profile-picture" alt="picture" />
            </dd>
        }
        <dt>
            @Html.LabelFor(m => m.Username)
        </dt>
        <dd>
            @Html.DisplayFor(m => m.Username)
        </dd>
        <dt>
            @Html.LabelFor(m => m.Email)
        </dt>
        <dd>
            @Html.DisplayFor(m => m.Email)
        </dd>
        <dt>
            @Html.LabelFor(m => m.Phone)
        </dt>
        <dd>
            @Html.DisplayFor(m => m.Phone)
        </dd>
        <dd>
            <div>
                @Html.ActionLink("Menage tweets", "Index", "Tweets")
            </div>
        </dd>

    </dl>
    <br />






