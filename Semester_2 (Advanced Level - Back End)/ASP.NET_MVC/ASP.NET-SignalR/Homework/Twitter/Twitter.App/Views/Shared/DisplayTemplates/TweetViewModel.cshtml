
@using System.Globalization
@model IEnumerable<Twitter.App.Models.ViewModels.TweetViewModel>

@foreach (var tweet in Model)
{
    <div class="well">
       @if (tweet.Files.Any(f => f.FileType == FileType.Photo))
       {
        <p>
            <img src="~/File?id=@tweet.Files.First(f => f.FileType == FileType.Photo).FileId" alt="picture" />
        </p>
        
       }
        <div>
            <span class="post-author">@tweet.Author.Username</span>
            <span class="posted-on">@tweet.CreatedOn.ToString("yyyy-MMM-dd HH:mm")</span>
        </div>
        <div>
            <p class="">@tweet.Content</p>
        </div>
    </div>
}

