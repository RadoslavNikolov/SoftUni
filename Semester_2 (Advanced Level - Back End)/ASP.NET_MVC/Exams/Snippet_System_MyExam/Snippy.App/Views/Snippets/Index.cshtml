@model IEnumerable<Snippy.App.Models.ViewModels.SnippetInfoViewModel>
@{
    ViewBag.Title = "All Snippets";
}

@Html.DisplayForModel()

<ul class="pagination pagination-lg">
    @{ string firstBtnClass = string.Empty;}

    @if (ViewBag.CurrentPage == 1)
    {
        firstBtnClass = "disabled";
    }
    <li class="@firstBtnClass">@Html.ActionLink("<<", "Index", "Snippets", routeValues: new { page = 1, count = 5 }, htmlAttributes: null)</li>

    @for (int page = 1; page <= ViewBag.TotalPages; page++)
    {
        string listItemClass = string.Empty;
        if (page == ViewBag.CurrentPage)
        {
            listItemClass = "active";
        }

        <li class="@listItemClass">@Html.ActionLink(page.ToString(), "Index", "Snippets", routeValues: new {page = page, count = 5}, htmlAttributes: null)</li>
    }


    @{ string lastBtnClass = string.Empty;}

    @if (ViewBag.CurrentPage == ViewBag.TotalPages)
    {
        lastBtnClass = "disabled";
    }
    <li class="@lastBtnClass">@Html.ActionLink(">>", "Index", "Snippets", routeValues: new { page = ViewBag.TotalPages, count = 5 }, htmlAttributes: null)</li>


</ul>
