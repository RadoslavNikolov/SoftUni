@model Twitter.App.Models.ViewModels.UserFullViewModel


<h2>User</h2>
<hr />
@if (Model.Files.Any(f => f.FileType == FileType.Photo))
{
    <div class="media">
        <div class="media-top">
            <a href="#">
                <img src="~/File?id=@Model.Files.First(f => f.FileType == FileType.Photo).FileId" class="media-object" width="250px" alt="profile picture">
            </a>
        </div>
        <div class="media-body">
            <div class="form-group">
                @Html.LabelFor(m => m.Username)
                @Html.DisplayFor(m => m.Username)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Email)
                @Html.DisplayFor(m => m.Email)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Phone)
                @Html.DisplayFor(m => m.Phone)
            </div>
        </div>
    </div>
}
    <br />
